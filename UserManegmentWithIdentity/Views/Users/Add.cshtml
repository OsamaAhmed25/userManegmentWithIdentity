@model AddUserVM

@{
    ViewData["Title"] = "Add User";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>Create a new User.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="form-floating py-2">
                 <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control"  aria-required="true" maxlength="100"/>
               
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
             <div class="form-floating py-2">
                  <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control"  aria-required="true" maxlength="100"/>
                 <span asp-validation-for="LastName" class="text-danger"></span>
              </div>
                <div class="form-floating py-2">
                  <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control"  aria-required="true" maxlength="100"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                  <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
              
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating py-2">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
           
                <h6 > Roles</h6>
                @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check">
                  <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                  <input  asp-for="@Model.Roles[i].IsSelected" class="d-block form-check-input" />
                   <label  asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                       @Model.Roles[i].RoleName
                   </label>
                </div>
               
            }
             <span asp-validation-for="Roles" class="text-danger"></span>
         
            <button  type="submit" class="w-100 btn btn-lg btn-primary d-block mt-4">Save</button>
        </form>
    </div>
  
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}